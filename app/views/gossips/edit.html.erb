<div class="jumbotron jumbotron-fluid" style="background:url(https://omny.fm/shows/gossip/12-basement-bethany/image.jpg?t=1555508442&size=WideShare)">
  <div class="container">
    <h1 class="display-4">Modifie le gossip "<%=@gossip.title%>" !!</h1>
  </div>
</div>

<div class="mx-auto" style="width: 600px;" button>
    <%= form_for @gossip do |f| %>
        <div class='form-group'>
            <label> Titre du Gossip </label>
                <%= f.text_field :title, class:'form-control' %>
        </div>
        <div class='form-group'>
            <label> Contenu du Gossip </label>
            <%= f.text_area :content, class:'form-control'%>
        </div>
        <div class='form-group'>
            <button type='submit' class='btn btn-outline-dark'> Modifier </button>
        </div> 
    <% end %>

</div>